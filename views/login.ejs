<form class="form-horizontal" method="post">
    <fieldset>
        <legend><%= lingua.login.title %></legend>
        <div class="control-group">
            <label class="control-label" for="username"><%= lingua.login.username %></label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="username" name="username" value="<%= username %>">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password"><%= lingua.login.password %></label>
            <div class="controls">
                <input type="password" class="input-xlarge" id="password" name="password">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= lingua.login.logon %></button>
        </div>
    </fieldset>
</form>
